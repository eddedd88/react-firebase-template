{
  "name": "react-firebase-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.10.2",
    "@material-ui/icons": "^4.9.1",
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.8",
    "@types/react-router-dom": "^5.1.5",
    "firebase": "^7.15.5",
    "firebaseui": "^4.5.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^5.7.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "recoil": "^0.0.10",
    "typeface-roboto": "^0.0.75",
    "typescript": "^3.9.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^10.4.3",
    "@testing-library/user-event": "^12.0.11",
    "@types/css-mediaquery": "^0.1.0",
    "@types/jest": "^26.0.3",
    "css-mediaquery": "^0.1.2",
    "firebase-tools": "^8.4.3",
    "husky": "^4.2.5",
    "jest-localstorage-mock": "^2.4.2",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "source-map-explorer": "^2.4.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:server": "firebase emulators:start --only firestore",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom-fourteen",
    "eject": "react-scripts eject",
    "coverage": "yarn test --coverage --watchAll=false",
    "analyze": "yarn build && source-map-explorer build/static/js/main.*",
    "ci": "CI=true yarn test && CI=true yarn build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/{index.ts,index.tsx}",
      "!src/react-app-env.d.ts",
      "!src/serviceWorker.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write --single-quote --no-semi --jsx-single-quote --arrow-parens avoid --trailing-comma none"
    ]
  }
}
