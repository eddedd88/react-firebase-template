{
  "name": "react-firebase-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@types/node": "^14.14.11",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/react-router-dom": "^5.1.6",
    "firebase": "^8.1.2",
    "firebaseui": "^4.7.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hook-form": "^6.12.2",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "recoil": "^0.1.2",
    "typeface-roboto": "^1.1.13",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.5.0",
    "@types/css-mediaquery": "^0.1.0",
    "@types/jest": "^26.0.18",
    "css-mediaquery": "^0.1.2",
    "firebase-tools": "^8.18.0",
    "husky": "^4.3.5",
    "jest-localstorage-mock": "^2.4.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "source-map-explorer": "^2.5.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:server": "firebase emulators:start --only firestore,auth",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "coverage": "yarn test --coverage --watchAll=false",
    "analyze": "yarn build && source-map-explorer build/static/js/main.*",
    "ci": "CI=true yarn test && CI=true yarn build",
    "emulator:export": "yarn firebase emulators:export firestore_mock_data"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/{index.ts,index.tsx}",
      "!src/react-app-env.d.ts",
      "!src/service-worker.ts",
      "!src/serviceWorkerRegistration.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write --single-quote --no-semi --jsx-single-quote --arrow-parens avoid --trailing-comma none"
    ]
  }
}
