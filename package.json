{
  "name": "react-firebase-template",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.6.2",
    "@mui/material": "^5.7.0",
    "@types/node": "^17.0.32",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.3",
    "@types/react-router-dom": "^5.3.3",
    "concurrently": "^7.1.0",
    "firebase": "^9.8.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-hook-form": "^7.31.1",
    "react-router": "^6.3.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "recoil": "^0.7.3-alpha.2",
    "typeface-roboto": "^1.1.13",
    "typescript": "^4.6.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.2.0",
    "@testing-library/user-event": "^14.1.1",
    "@types/css-mediaquery": "^0.1.1",
    "@types/jest": "^27.5.0",
    "css-mediaquery": "^0.1.2",
    "firebase-tools": "^10.9.0",
    "husky": "^8.0.1",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "source-map-explorer": "^2.5.2"
  },
  "scripts": {
    "start": "concurrently \"yarn start:server\" \"react-scripts start\" -k",
    "start:server": "firebase emulators:start --only firestore,auth",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "coverage": "yarn test --coverage --watchAll=false",
    "analyze": "yarn build && source-map-explorer build/static/js/main.*",
    "ci": "CI=true yarn test && CI=true yarn build",
    "emulator:export": "yarn firebase emulators:export firestore_mock_data",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/{index.ts,index.tsx}",
      "!src/react-app-env.d.ts",
      "!src/service-worker.ts",
      "!src/serviceWorkerRegistration.ts"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 90,
        "statements": 90,
        "branches": 50,
        "functions": 50
      }
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write --single-quote --no-semi --jsx-single-quote --arrow-parens avoid --trailing-comma none"
  }
}
